<%= simple_form_for(@route) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :session_id, collection: Session.all, include_blank: false %>
  </div>

  <div class="form-group">
    <%= f.input :home_point %>
  </div>

  <div class="form-group">
    <%= f.input :away_point %>
  </div>

  <div class="form-group">
    <%= f.input :price, as: :string, hint: "Example: 20.00. Include cents, always." %>
  </div>

  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>
