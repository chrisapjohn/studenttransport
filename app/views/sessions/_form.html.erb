<%= simple_form_for(@session) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :name %>
  </div>

  <div class="form-group">
    <%= f.input :opening_date, as: :datetime, start_year: Date.today.year, end_year: Date.today.year + 4, order: [:year, :month, :day, :hour, :minute], ampm: false, minute_step: 15  %>
  </div>

  <div class="form-group">
    <%= f.input :display_order %>
  </div>  

  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>
